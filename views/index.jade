extends layout

block content
  div(class="container")
    div(class="row")
      div(class="col-md-6")
        h1= title
        p
          input(type='text', value='test', name='room', id='room', placeholder='Name of the room')
          button(id='enter') Enter
          p(id='gamequeue')
        p
          button(id='start', style='display:none') Start the Game

      div(class="col-md-6")
        div(id='gameplay')
        div(id='target')
        div(id='guess')


  script(src='/socket.io/socket.io.js')
  script(src='http://code.jquery.com/jquery-2.0.3.min.js')
  script(src='/js/frontend.js')
  script(src='/js/bootstrap.min.js')
